        </div>
        <div class="row">
            <div class="js-add-criteria" data-url="{{ absolute_url('ajaxAddCriteria') }}"></div>
            <button id="add-criteria" class="btn btn-info">Add Criteria</button>
            {{ form_widget(form.search, {'attr': {'class': 'btn-primary'}}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}