                <div class="col-md-2">
                    {{ form_label(form.reviewer_name) }}
                    {{ form_widget(form.reviewer_name) }}
                </div>
                <div class="col-md-2">
                    {{ form_label(form.reviewer_email) }}
                    {{ form_widget(form.reviewer_email) }}
                </div>
